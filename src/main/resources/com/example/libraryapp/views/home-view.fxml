<?import javafx.scene.text.Text?>

<VBox prefHeight="600.0" prefWidth="1034.0" spacing="20.0" stylesheets="@../styles/home.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.libraryapp.controllers.HomeController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <HBox spacing="70.0">
      <children>
         <Button fx:id="newStudentId" mnemonicParsing="false" onAction="#onNewStudent" text="New Student" />
         <Button fx:id="newBookId" mnemonicParsing="false" onAction="#onNewBook" text="New Book">
            <HBox.margin>
               <Insets />
            </HBox.margin>
         </Button>
         <Button fx:id="transactionsId" mnemonicParsing="false" onAction="#onTransactions" text="Transactions">
            <HBox.margin>
               <Insets left="10.0" />
            </HBox.margin>
         </Button>
         <Button fx:id="issueBookId" mnemonicParsing="false" onAction="#onIssueBook" text="Issue Book">
            <HBox.margin>
               <Insets />
            </HBox.margin>
         </Button>
         <Button fx:id="returnBookId" mnemonicParsing="false" onAction="#onReturnBook" text="Return Book">
            <HBox.margin>
               <Insets />
            </HBox.margin>
         </Button>
         <Button fx:id="addCopiesId" mnemonicParsing="false" onAction="#onAddCopies" prefHeight="24.0" prefWidth="103.0" text="Add Copies" />
      </children>
      <VBox.margin>
         <Insets />
      </VBox.margin>
   </HBox>
   <HBox fx:id="vBoxBodyId" layoutX="30.0" layoutY="30.0" prefHeight="532.0" prefWidth="994.0" spacing="43.0">
      <children>
         <VBox fillWidth="false" prefHeight="302.0" prefWidth="148.0" spacing="250.0">
            <children>
               <VBox layoutX="10.0" layoutY="10.0" prefHeight="127.0" prefWidth="138.0" spacing="20.0">
                  <children>
                     <Button fx:id="booksId1" mnemonicParsing="false" onAction="#onBooks" prefHeight="24.0" prefWidth="102.0" text="Books" />
                     <Button fx:id="studentsId1" mnemonicParsing="false" onAction="#onStudents" prefHeight="24.0" prefWidth="103.0" text="Students" />
                     <Button fx:id="statisticsId1" mnemonicParsing="false" onAction="#onStatistics" prefHeight="24.0" prefWidth="104.0" text="Statistics" />
                  </children>
               </VBox>
               <VBox prefHeight="67.0" prefWidth="100.0" spacing="10.0">
                  <children>
                     <Button fx:id="logoutId" mnemonicParsing="false" onAction="#onLogout" prefHeight="24.0" prefWidth="99.0" text="Logout" />
                     <Button fx:id="settingsId" mnemonicParsing="false" onAction="#onSettings" prefHeight="24.0" prefWidth="102.0" text="Settings" />
                  </children>
               </VBox>
            </children>
         </VBox>
         <VBox prefHeight="424.0" prefWidth="800.0">
            <children>
               <HBox prefHeight="29.0" prefWidth="470.0" spacing="10.0">
                  <children>
                     <TextField fx:id="searchId" prefHeight="24.0" prefWidth="693.0" promptText="Search" />
                     <Button fx:id="searchButtonId" mnemonicParsing="false" onAction="#onSearch" prefHeight="24.0" prefWidth="86.0" text="Search" />
                  </children>
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
               </HBox>
               <VBox prefHeight="466.0" prefWidth="800.0">
                  <children>
                     <ScrollPane prefHeight="456.0" prefWidth="800.0">
                        <content>
                           <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="487.0" prefWidth="790.0">
                              <children>
                                 <Text fx:id="browserId" fill="#5a11c6" layoutX="331.0" layoutY="61.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome Back!">
                                    <font>
                                       <Font size="20.0" />
                                    </font></Text>
                                 <ImageView fitHeight="314.0" fitWidth="384.0" layoutX="236.0" layoutY="97.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                       <Image url="@../assets/lib32.jpg" />
                                    </image>
                                 </ImageView>
                              </children>
                           </AnchorPane>
                        </content>
                     </ScrollPane>
                  </children>
               </VBox>
            </children>
         </VBox>
      </children>
   </HBox>
</VBox>
