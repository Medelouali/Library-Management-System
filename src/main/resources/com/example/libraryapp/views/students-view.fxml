<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="1034.0" spacing="20.0" stylesheets="@../styles/home.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.libraryapp.controllers.StudentController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox spacing="30.0">

        <children>
            <Button fx:id="newStudentId" mnemonicParsing="false" onAction="#onNewStudent" text="New Student" />
            <Button fx:id="newBookId" mnemonicParsing="false" onAction="#onNewBook" prefHeight="29.0" prefWidth="133.0" text="New Book">
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </Button>
            <Button fx:id="transactionsId" mnemonicParsing="false" onAction="#onTransactions" prefHeight="29.0" prefWidth="155.0" text="Transactions">
                <HBox.margin>
                    <Insets left="10.0" />
                </HBox.margin>
            </Button>
            <Button fx:id="issueBookId" mnemonicParsing="false" onAction="#onIssueBook" prefHeight="29.0" prefWidth="133.0" text="Issue Book">
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </Button>
            <Button fx:id="returnBookId" mnemonicParsing="false" onAction="#onReturnBook" prefHeight="29.0" prefWidth="143.0" text="Return Book">
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </Button>
                <Button fx:id="addCopiesId" mnemonicParsing="false" onAction="#onAddCopies" prefHeight="29.0" prefWidth="135.0" text="Add Copies" />

        </children>
        <VBox.margin>
            <Insets />
        </VBox.margin>
      <padding>
         <Insets bottom="10.0" top="10.0" />
      </padding>
    </HBox>

    <HBox fx:id="vBoxBodyId" layoutX="30.0" layoutY="30.0" prefHeight="536.0" prefWidth="994.0" spacing="43.0">
        <children>
            <VBox fillWidth="false" prefHeight="424.0" prefWidth="148.0" spacing="250.0">
                <children>
                    <VBox prefHeight="127.0" prefWidth="134.0" spacing="20.0">
                        <children>

                            <Button fx:id="booksId" mnemonicParsing="false" onAction="#onBooks" prefHeight="29.0" prefWidth="154.0" text="Books" />
                            <Button fx:id="studentsId" mnemonicParsing="false" onAction="#onStudents" prefHeight="29.0" prefWidth="156.0" text="Students" />
                            <Button fx:id="statisticsId" mnemonicParsing="false" onAction="#onStatistics" prefHeight="29.0" prefWidth="179.0" text="Statistics" />
                        </children>
                    </VBox>
                    <VBox prefHeight="71.0" prefWidth="171.0" spacing="20.0">
                        <children>
                            <Button fx:id="logoutId" mnemonicParsing="false" onAction="#onLogout" prefHeight="29.0" prefWidth="190.0" text="Logout" />
                        </children>
                    </VBox>
                </children>
            </VBox>
            <VBox prefHeight="516.0" prefWidth="802.0">
                <children>
                    <HBox prefHeight="29.0" prefWidth="470.0" spacing="10.0">
                        <children>
                            <TextField fx:id="searchId" prefHeight="24.0" prefWidth="701.0" promptText="Search" />
                            <Button fx:id="searchButtonId" mnemonicParsing="false" onAction="#onSearch" prefHeight="24.0" prefWidth="86.0" text="Search" />
                        </children>
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
                    </HBox>
                    <VBox prefHeight="491.0" prefWidth="802.0">
                        <children>
                            <ScrollPane prefHeight="492.0" prefWidth="802.0">


                        <content>
                           <VBox fx:id="StudentLayout" alignment="TOP_CENTER" prefHeight="523.0" prefWidth="450.0" />
                        </content>
                            </ScrollPane>
                        </children>
                    </VBox>
                </children>
            </VBox>
        </children>
    </HBox>
</VBox>
