<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="1034.0" spacing="20.0" stylesheets="@../styles/home.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.libraryapp.controllers.StatisticStudentController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox spacing="70.0">
        <children>
            <Button fx:id="newStudentId" mnemonicParsing="false" onAction="#onNewStudent" text="New Student" />
            <Button fx:id="newBookId" mnemonicParsing="false" onAction="#onNewBook" text="New Book">
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </Button>
            <Button fx:id="transactionsId" mnemonicParsing="false" onAction="#onTransactions" text="Transactions">
                <HBox.margin>
                    <Insets left="10.0" />
                </HBox.margin>
            </Button>
            <Button fx:id="issueBookId" mnemonicParsing="false" onAction="#onIssueBook" text="Issue Book">
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </Button>
            <Button fx:id="returnBookId" mnemonicParsing="false" onAction="#onReturnBook" text="Return Book">
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </Button>
                <Button fx:id="addCopiesId" mnemonicParsing="false" onAction="#onAddCopies" prefHeight="24.0" prefWidth="103.0" text="Add Copies" />
        </children>
        <VBox.margin>
            <Insets />
        </VBox.margin>
    </HBox>
    <HBox fx:id="vBoxBodyId" layoutX="30.0" layoutY="30.0" spacing="43.0">
        <children>
            <VBox fillWidth="false" prefHeight="424.0" prefWidth="148.0" spacing="250.0">
                <children>
                    <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="132.0" prefWidth="146.0" spacing="20.0">
                        <children>
                            <Button fx:id="booksId" mnemonicParsing="false" onAction="#onBooks" prefHeight="24.0" prefWidth="102.0" text="Books" />
                            <Button fx:id="studentsId" mnemonicParsing="false" onAction="#onStudents" prefHeight="24.0" prefWidth="103.0" text="Students" />
                            <MenuButton mnemonicParsing="false" prefHeight="26.0" prefWidth="105.0" text="statistics" textAlignment="RIGHT">
                                <items>
                                    <MenuItem fx:id="studentsSwitchId" mnemonicParsing="false" onAction="#onStatisticsStudents" text="student's statistics" />
                                    <MenuItem fx:id="booksSwitchId" mnemonicParsing="false" onAction="#onStatisticsBooks" text="book's statistics" />
                                </items>
                                <cursor>
                                    <Cursor fx:constant="NONE" />
                                </cursor>
                            </MenuButton>
                        </children>
                    </VBox>
                    <VBox prefHeight="71.0" prefWidth="100.0" spacing="20.0">
                        <children>
                            <Button fx:id="logoutId" mnemonicParsing="false" onAction="#onLogout" prefHeight="24.0" prefWidth="99.0" text="Logout" />
                        </children>
                    </VBox>
                </children>
            </VBox>
            <VBox prefHeight="552.0" prefWidth="805.0">
                <children>
                    <HBox prefHeight="29.0" prefWidth="470.0" spacing="10.0">
                        <children>
                            <TextField fx:id="searchId" prefHeight="24.0" prefWidth="705.0" promptText="Search" />
                            <Button fx:id="searchButtonId" mnemonicParsing="false" onAction="#onSearch" prefHeight="24.0" prefWidth="86.0" text="Search" />
                        </children>
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
                    </HBox>
                    <VBox prefHeight="496.0" prefWidth="804.0">
                        <children>
                            <ScrollPane prefHeight="500.0" prefWidth="804.0">
                                <content>
                                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="470.0" prefWidth="804.0">
                                        <children>
                                            <Button layoutX="8.0" layoutY="44.0" mnemonicParsing="false" onAction="#showallstudents" text="show all students " />
                                            <TableView fx:id="table" layoutX="178.0" layoutY="44.0" prefHeight="107.0" prefWidth="603.0" AnchorPane.leftAnchor="178.0">
                                                <columns>
                                                    <TableColumn fx:id="username" prefWidth="212.0" text="username" />
                                                    <TableColumn fx:id="cin" prefWidth="174.0" text="cin" />
                                                    <TableColumn fx:id="number" prefWidth="215.0" text="number of borrowed copies" />
                                                </columns>
                                            </TableView>
                                        </children>
                                    </AnchorPane>
                                </content>
                            </ScrollPane>
                        </children>
                    </VBox>
                </children>
            </VBox>
        </children>
    </HBox>
</VBox>
