<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox prefHeight="500.0" prefWidth="700.0" spacing="20.0" stylesheets="@../styles/home.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.libraryapp.controllers.GuestBookController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox fx:id="vBoxBodyId" layoutX="30.0" layoutY="30.0" spacing="43.0">
        <children>
            <VBox fillWidth="false" prefHeight="424.0" prefWidth="148.0" spacing="200.0">
                <children>
                    <VBox prefHeight="71.0" prefWidth="148.0" spacing="20.0">
                        <children>
                            <Button fx:id="logoutId" mnemonicParsing="false" onAction="#onLogout" prefHeight="24.0" prefWidth="122.0" text="Back" />

                        </children>
                    </VBox>
                </children>
            </VBox>
            <VBox prefHeight="608.0" prefWidth="804.0">
                <children>
                    <HBox prefHeight="29.0" prefWidth="470.0" spacing="10.0">
                        <children>
                            <TextField fx:id="searchId" prefHeight="24.0" prefWidth="699.0" promptText="Search" />
                            <Button fx:id="searchButtonId" mnemonicParsing="false" onAction="#onSearch" prefHeight="24.0" prefWidth="86.0" text="Search" />
                        </children>
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
                    </HBox>
                    <VBox prefHeight="528.0" prefWidth="804.0">
                        <children>
                            <ScrollPane prefHeight="534.0" prefWidth="804.0">
                        <content>
                           <VBox fx:id="BookLayout" prefHeight="489.0" prefWidth="790.0" />

                        </content></ScrollPane>
                        </children>
                    </VBox>
                </children>
            </VBox>
        </children>
    </HBox>
</VBox>
