<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.control.PasswordField?>
<AnchorPane fx:id="registerPageID" prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: white;" stylesheets="@../styles/welcome.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.libraryapp.controllers.RegisterPageController">
   <children>
      <Label layoutX="276.0" layoutY="27.0" prefHeight="59.0" prefWidth="148.0" style="-fx-alignment: center; -fx-font-size: 38;" text="Register" />
      <ImageView fitHeight="130.0" fitWidth="192.0" layoutX="254.0" layoutY="86.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/librarian.jpg" />
         </image>
      </ImageView>
      <TextField fx:id="username" layoutX="165.0" layoutY="225.0" prefHeight="30.0" prefWidth="370.0" promptText="Username" />
      <TextField fx:id="email" layoutX="165.0" layoutY="267.0" prefHeight="30.0" prefWidth="370.0" promptText="Email" />
      <PasswordField fx:id="password" layoutX="165.0" layoutY="308.0" prefHeight="30.0" prefWidth="370.0" promptText="Password" />
      <Button layoutX="305.0" layoutY="433.0" mnemonicParsing="false" onAction="#onRegister" prefHeight="35.0" prefWidth="90.0" text="Register" />
      <Button layoutX="14.0" layoutY="39.0" mnemonicParsing="false" onAction="#onBack" prefHeight="35.0" prefWidth="90.0" text="Back" />
      <Hyperlink layoutX="96.0" layoutY="458.0" onAction="#onGuestLink" prefHeight="34.0" prefWidth="180.0" style="-fx-font-size: 16; -fx-font-weight: bold;" text="Browse In Guest Mode" />
      <Hyperlink layoutX="428.0" layoutY="458.0" onAction="#onLoginLink" prefHeight="34.0" prefWidth="214.0" style="-fx-font-size: 16; -fx-font-weight: bold;" text="Already Have an Account ?" />
      <TextField fx:id="cin" layoutX="165.0" layoutY="348.0" prefHeight="30.0" prefWidth="370.0" promptText="Cin" />
      <TextField fx:id="description" layoutX="165.0" layoutY="391.0" prefHeight="30.0" prefWidth="370.0" promptText="Description" />
      <Label fx:id="error_msg" layoutX="544.0" layoutY="271.0" prefHeight="18.0" prefWidth="110.0" text="Invalid email" textAlignment="CENTER" textFill="#c96464" />
   </children>
</AnchorPane>
