        <Label layoutX="276.0" layoutY="27.0" prefHeight="59.0" prefWidth="148.0" style="-fx-alignment: center; -fx-font-size: 38;" text="Register" />
        <ImageView fitHeight="130.0" fitWidth="192.0" layoutX="254.0" layoutY="86.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../assets/librarian.jpg" />
            </image>
        </ImageView>
        <TextField fx:id="username" layoutX="165.0" layoutY="225.0" prefHeight="30.0" prefWidth="370.0" promptText="Username" />
        <TextField fx:id="email" layoutX="165.0" layoutY="267.0" prefHeight="30.0" prefWidth="370.0" promptText="Email" />
        <PasswordField fx:id="password" layoutX="165.0" layoutY="308.0" prefHeight="30.0" prefWidth="370.0" promptText="Password" />
        <Button layoutX="305.0" layoutY="433.0" mnemonicParsing="false" onAction="#onRegister" prefHeight="35.0" prefWidth="90.0" text="Register" />
        <Button layoutX="14.0" layoutY="39.0" mnemonicParsing="false" onAction="#onBack" prefHeight="35.0" prefWidth="90.0" text="Back" />
