<AnchorPane fx:id="registerPageID" prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: white;" stylesheets="@../styles/welcome.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.libraryapp.controllers.RegisterPageController">
