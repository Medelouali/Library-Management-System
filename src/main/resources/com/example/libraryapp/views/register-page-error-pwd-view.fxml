        <TextField fx:id="cin" layoutX="165.0" layoutY="348.0" prefHeight="30.0" prefWidth="370.0" promptText="Cin" />
        <TextField fx:id="description" layoutX="165.0" layoutY="391.0" prefHeight="30.0" prefWidth="370.0" promptText="Description" />
      <Label fx:id="error_msg" layoutX="545.0" layoutY="312.0" text="6 characters at least" />
    </children>
</AnchorPane>
