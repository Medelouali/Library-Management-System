<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="1034.0" spacing="20.0" stylesheets="@../styles/home.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.libraryapp.controllers.StatisticBookController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox spacing="70.0">
        <children>
            <Button fx:id="newStudentId" mnemonicParsing="false" onAction="#onNewStudent" text="New Student" />
            <Button fx:id="newBookId" mnemonicParsing="false" onAction="#onNewBook" text="New Book">
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </Button>
            <Button fx:id="transactionsId" mnemonicParsing="false" onAction="#onTransactions" text="Transactions">
                <HBox.margin>
                    <Insets left="10.0" />
                </HBox.margin>
            </Button>
            <Button fx:id="issueBookId" mnemonicParsing="false" onAction="#onIssueBook" text="Issue Book">
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </Button>
            <Button fx:id="returnBookId" mnemonicParsing="false" onAction="#onReturnBook" text="Return Book">
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </Button>
                <Button fx:id="addCopiesId" mnemonicParsing="false" onAction="#onAddCopies" prefHeight="24.0" prefWidth="103.0" text="Add Copies" />
        </children>
        <VBox.margin>
            <Insets />
        </VBox.margin>
    </HBox>
    <HBox fx:id="vBoxBodyId" layoutX="30.0" layoutY="30.0" prefHeight="524.0" prefWidth="994.0" spacing="43.0">
        <children>
            <VBox fillWidth="false" prefHeight="424.0" prefWidth="148.0" spacing="250.0">
                <children>
                    <VBox prefHeight="126.0" prefWidth="138.0" spacing="20.0">
                        <children>
                            <Button fx:id="booksId" mnemonicParsing="false" onAction="#onBooks" prefHeight="24.0" prefWidth="102.0" text="Books" />
                            <Button fx:id="studentsId" mnemonicParsing="false" onAction="#onStudents" prefHeight="24.0" prefWidth="103.0" text="Students" />
                            <MenuButton fx:id="statisticsSwitchId" mnemonicParsing="false" prefHeight="26.0" prefWidth="105.0" text="statistics">
                                <items>
                                    <MenuItem fx:id="students" mnemonicParsing="false" onAction="#onStatisticsStudents" text="student's statistics" />
                                    <MenuItem fx:id="books" mnemonicParsing="false" onAction="#onStatisticsBooks" text="book's statistics" />
                                </items>
                            </MenuButton>
                        </children>
                    </VBox>
                    <VBox prefHeight="71.0" prefWidth="100.0" spacing="20.0">
                        <children>
                            <Button fx:id="logoutId" mnemonicParsing="false" onAction="#onLogout" prefHeight="24.0" prefWidth="99.0" text="Logout" />
                        </children>
                    </VBox>
                </children>
            </VBox>
            <VBox prefHeight="516.0" prefWidth="810.0">
                <children>
                    <HBox prefHeight="29.0" prefWidth="470.0" spacing="10.0">
                        <children>
                            <TextField fx:id="searchId" prefHeight="24.0" prefWidth="703.0" promptText="Search" />
                            <Button fx:id="searchButtonId" mnemonicParsing="false" onAction="#onSearch" prefHeight="24.0" prefWidth="86.0" text="Search" />
                        </children>
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
                    </HBox>
                    <VBox prefHeight="493.0" prefWidth="807.0">
                        <children>
                            <ScrollPane prefHeight="494.0" prefWidth="807.0">
                                <content>
                                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="490.0" prefWidth="802.0">
                                        <children>
                                            <Button fx:id="showallbooks" layoutX="8.0" layoutY="44.0" mnemonicParsing="false" onAction="#showAllBooks" text="show all books " />
                                            <TableView fx:id="tablebook" layoutX="159.0" layoutY="44.0" prefHeight="269.0" prefWidth="623.0">
                                                <columns>
                                                    <TableColumn fx:id="language" prefWidth="219.0" text="language" />
                                                    <TableColumn fx:id="number" prefWidth="263.0" text="number of copies" />
                                                    <TableColumn fx:id="rating" prefWidth="138.0" text="rating" />
                                                </columns>
                                            </TableView>
                                        </children>
                                    </AnchorPane>
                                </content>
                            </ScrollPane>
                        </children>
                    </VBox>
                </children>
            </VBox>
        </children>
    </HBox>
</VBox>
